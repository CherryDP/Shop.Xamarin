<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GaleriaKot.WendyMenuItemDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding ImageUrl}" HeightRequest="200" Aspect="AspectFill" />
            <Label Text="{Binding Name}" FontSize="Large" FontAttributes="Bold" Margin="10,20,10,0" />
            <Label Text="{Binding Description}" FontSize="Medium" Margin="10,0" />
            <Label Text="{Binding Price}" FontSize="Large" FontAttributes="Bold" TextColor="#d82b00" Margin="10,10,10,20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>